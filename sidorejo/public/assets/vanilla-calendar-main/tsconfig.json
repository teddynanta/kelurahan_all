{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./build/",
		"target": "ES6",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
}
